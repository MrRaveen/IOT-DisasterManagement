<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7fa">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:background="#f5f7fa">

        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2980b9"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/disasterTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌊 Tsunami Monitoring System"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📍 Colombo Coastal Station"
                    android:textSize="16sp"
                    android:textColor="#e8f4f8"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/lastUpdated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🕐 Last Updated: --/--/---- --:--"
                    android:textSize="14sp"
                    android:textColor="#bdc3c7" />

            </LinearLayout>

            <!-- Tsunami Status Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🌊 Tsunami Alert Status"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50" />

                    <TextView
                        android:id="@+id/statusDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="● NORMAL"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#27ae60"
                        android:background="#e8f5e8"
                        android:padding="12dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ecf0f1"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📊 Sea Level Reading:"
                        android:textSize="16sp"
                        android:textColor="#7f8c8d" />

                    <TextView
                        android:id="@+id/sensorReading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00 m"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="✅ Normal Range:"
                        android:textSize="16sp"
                        android:textColor="#7f8c8d" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-0.5m to +0.5m"
                        android:textSize="16sp"
                        android:textColor="#27ae60" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="⚠️ Alert Threshold:"
                        android:textSize="16sp"
                        android:textColor="#7f8c8d" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="±1.0m"
                        android:textSize="16sp"
                        android:textColor="#e74c3c"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🔴 Critical Level:"
                        android:textSize="16sp"
                        android:textColor="#7f8c8d" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="±2.0m"
                        android:textSize="16sp"
                        android:textColor="#c0392b"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Rainfall Monitoring Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/disasterTitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🌧️ Rainfall Monitoring"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#2c3e50" />

                    <TextView
                        android:id="@+id/rainfallStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="● NORMAL"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#27ae60"
                        android:background="#e8f5e8"
                        android:padding="12dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/lastUpdated2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🕐 Last Reading: --/--/---- --:--"
                    android:textSize="14sp"
                    android:textColor="#7f8c8d"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ecf0f1"
                    android:layout_marginBottom="16dp" />

                <!-- Rainfall Details Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#f8f9fa"
                        android:padding="20dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📅 Current (24h)"
                            android:textSize="14sp"
                            android:textColor="#7f8c8d"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/lastUpdated4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10mm"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#3498db" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#f8f9fa"
                        android:padding="20dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📊 Weekly Avg"
                            android:textSize="14sp"
                            android:textColor="#7f8c8d"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45mm"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#3498db" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Risk Assessment -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#e8f5e8"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🏔️ Landslide Risk Assessment"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2c3e50"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Based on 24h rainfall and soil conditions"
                            android:textSize="12sp"
                            android:textColor="#7f8c8d" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/lastUpdated5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOW"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#27ae60"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

            </LinearLayout>

            <!-- Weather Forecast Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🌤️ Weather Forecast (Next 24h)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="☀️ Condition:"
                        android:textSize="16sp"
                        android:textColor="#7f8c8d" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Partly Cloudy"
                        android:textSize="16sp"
                        android:textColor="#2c3e50" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🌧️ Rain Probability:"
                        android:textSize="16sp"
                        android:textColor="#7f8c8d" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30%"
                        android:textSize="16sp"
                        android:textColor="#f39c12" />

                </LinearLayout>

            </LinearLayout>

            <!-- Emergency Contacts Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚨 Emergency Contacts"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📞 Disaster Management:"
                        android:textSize="16sp"
                        android:textColor="#7f8c8d" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="117"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#e74c3c" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📞 Meteorology Dept:"
                        android:textSize="16sp"
                        android:textColor="#7f8c8d" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="011-2694104"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#e74c3c" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📞 Police Emergency:"
                        android:textSize="16sp"
                        android:textColor="#7f8c8d" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="119"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#e74c3c" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="← Go to Dashboard (Logout)"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="#e74c3c"
                    android:padding="16dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#2c3e50"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/homeTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#34495e"
            android:padding="12dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏠"
                android:textSize="20sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#2c3e50"
            android:padding="12dp"
            android:layout_marginStart="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚙️"
                android:textSize="20sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="12sp"
                android:textColor="#bdc3c7" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>